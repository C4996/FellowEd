{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "outDir": "out",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": false,
    "noFallthroughCasesInSwitch": true /* Report errors for fallthrough cases in switch statement. */
  },
  "include": [
    "src/**/*" // Add the missing file path here
  ]
}
